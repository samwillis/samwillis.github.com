.formformat p {
	margin: 0;
	padding: 0;
	clear: both;
	color: #666;
	font: 10px "Helvetica Neue", Arial, Helvetica, Geneva, sans-serif;
}

.formformat p span.new_line_help {
	display: block;
	margin-left: 158px;
	margin-bottom: 13px;
}

.formformat p label {
	margin: 0;
	width: 150px;
	text-align: right;
	float: left;
	display: block;
	font: 13px/36px "Helvetica Neue", Arial, Helvetica, Geneva, sans-serif;
	color: #ccc;
	padding: 0 8px 0 0;
	text-shadow: #000 0px 0px 0px;
}

.formformat p .fake_input {
	font: 12px "Lucida Grande", Lucida, Verdana, sans-serif;
	color: #666;
	padding: 3px 4px;
	top: 8px;
	position: relative;
}

.formformat p .fake_input a.small {
	font-size: 10px;
}

.formformat p input {
	font: 12px "Lucida Grande", Lucida, Verdana, sans-serif;
	color: #000;
	padding: 3px 4px;
	margin-top: 7px;
	width: 250px;
	background-color: #f1f1f1;
	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;
}

.formformat p textarea {
	font: 12px "Lucida Grande", Lucida, Verdana, sans-serif;
	color: #000;
	padding: 3px 4px;
	margin-top: 7px;
	width: 380px;
	height: 137px;
	background-color: #f1f1f1;
	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;
}

.formformat .button_line {
	margin-left: 158px;
	height: 36px;
	font-size: 13px;
	line-height: 36px;
	margin-top: 4px;
}

.formformat button {
	color: #cbcbcb;
	font: bold 13px "Helvetica Neue", Arial, Helvetica, Geneva, sans-serif;
	text-align: center;
	background-color: #333;
	padding: 4px 20px;
	text-shadow: #333 0px 0px 0px;
	cursor: pointer;
	cursor: hand;
	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;
}

.formformat button:hover {
	color: #fff;
	text-shadow: none;
	background-color: #444;
}

.formformat ul.errorlist {
	list-style-type: none;
	font: 11px/11px "Helvetica Neue", Arial, Helvetica, Geneva, sans-serif;
	clear: both;
	padding-top: 7px;
	padding-left: 158px;
}

.formformat ul.errorlist li {
	display: inline;
	color: #ef0000;
}





